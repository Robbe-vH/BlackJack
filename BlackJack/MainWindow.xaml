<Window x:Class="BlackJack.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BlackJack"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Loaded="Window_Loaded" Background="#FFF8C8DC">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Button x:Name="BtnHit" Grid.Column="4" Grid.Row="2" Width="100" Content="Hit"  Margin="20, 70, 20, 20" Click="BtnHit_Click" />
        <Button x:Name="BtnStand" Grid.Column="3" Grid.Row="2" Width="100" Content="Stand"  Margin="20, 70, 20, 20" />
        <Button x:Name="BtnDeel" Grid.Column="2" Grid.Row="2" Width="100" Content="Deel"  Margin="20, 70, 20, 20" Click="BtnDeel_Click" />
        <TextBox x:Name="TxtSpelerKaarten" Grid.Column="0" Grid.Row="2" Grid.ColumnSpan="2" Margin="20" Text="Hier komen de speler kaarten in te staan" IsReadOnly="True" />
        <TextBox x:Name="TxtDealerKaarten" Grid.Column="3" Grid.Row="0" Grid.ColumnSpan="2" Margin="20" Text="Hier komen de dealer kaarten in te staan" IsReadOnly="True" />
        <TextBlock Grid.Column="0" Grid.Row="1" Text="Score Speler" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="25" />
        <TextBlock x:Name="LblSpelerScore" Grid.Column="1" Grid.Row="1" Text="0" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="35" />
        <TextBlock x:Name="LblDealerScore" Grid.Column="3" Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center" Text="0" FontSize="35" />
        <TextBlock x:Name="LblResultaat" Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="2" HorizontalAlignment="Center" VerticalAlignment="Center" Text="Resultaat" FontSize="35" />
        <TextBlock Grid.Column="4" Grid.Row="1" Text="Score Dealer" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="25" />
        <TextBlock x:Name="LblResultaat" Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="2" Text="Resultaat" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="25" />
    </Grid>

</Window>
