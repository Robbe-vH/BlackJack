<Window x:Class="BlackJack.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BlackJack"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Background="#FFF8C8DC">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.5*"/>
            <RowDefinition Height="0.5*"/>
            <RowDefinition Height="0.5*"/>
            <RowDefinition Height="0.5*"/>
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition Width="0.5*"/>
            <ColumnDefinition Width="0.5*"/>
            <ColumnDefinition  />
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Button x:Name="BtnHit" Grid.Column="5" Grid.Row="4"  Content="Hit"  Margin="20 50" Click="BtnHit_Click"/>
        <Button x:Name="BtnStand" Grid.Column="6" Grid.Row="4" Content="Stand"  Margin="20, 50" Click="BtnStand_Click"/>
        <Button x:Name="BtnDeel" Grid.Column="7" Grid.Row="4" Content="Deel"  Margin="20,50" Click="BtnDeel_Click"/>
        <Button x:Name="BtnNieuwSpel" Grid.Column="3" Grid.Row="4" Grid.ColumnSpan="2" Content="Nieuw Spel"  Margin="20, 50" Click="BtnNieuwSpel_Click"/>
        <Button x:Name="BtnResetInzet" Grid.Column="3" Grid.Row="1" Grid.ColumnSpan="2" Content="Inzet Resetten" Margin="10" Height="40" VerticalAlignment="Bottom" Click="BtnResetInzet_Click"/>
        <Button x:Name="BtnInzetPlus1" Grid.Column="3" Grid.Row="2" Content="+1" Margin="10, 15" Click="BtnInzetPlus1_Click"/>
        <Button x:Name="BtnInzetPlus5" Grid.Column="4" Grid.Row="2" Content="+5" Margin="10, 15" Click="BtnInzetPlus5_Click"/>
        <Button x:Name="BtnInzetPlus10" Grid.Column="3" Grid.Row="3" Content="+10" Margin="10, 15" Click="BtnInzetPlus10_Click"/>
        <Button x:Name="BtnInzetPlus25" Grid.Column="4" Grid.Row="3" Content="+25" Margin="10, 15" Click="BtnInzetPlus25_Click"/>

        <TextBox x:Name="TxtSpelerKaarten" Grid.Column="0" Grid.Row="4"  Grid.ColumnSpan="2" Margin="20,20,20,20" Text="Hier komen de speler kaarten in te staan" IsReadOnly="True" />
        <TextBox x:Name="TxtDealerKaarten" Grid.Column="6" Grid.Row="0" Grid.ColumnSpan="2" Grid.RowSpan="2" Margin="20,20,20,20" Text="Hier komen de dealer kaarten in te staan" IsReadOnly="True" />
        
        <TextBlock Grid.Column="0" Grid.ColumnSpan="2" Grid.RowSpan="2" Grid.Row="2" Text="Score Speler" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="25" />
        <TextBlock x:Name="LblSpelerScore" Grid.Column="2" Grid.Row="2" Grid.RowSpan="2" Text="0" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="35" />
        <TextBlock x:Name="LblDealerScore" Grid.Column="5" Grid.Row="2" Grid.RowSpan="2" HorizontalAlignment="Center" VerticalAlignment="Center" Text="0" FontSize="35" />
        <TextBlock x:Name="LblResultaat" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" HorizontalAlignment="Center" VerticalAlignment="Center" Text="Resultaat" FontSize="25" />
        <TextBlock Grid.Column="0" Grid.Row="1" Text="Budget: " FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <TextBlock x:Name="LblBudget" Grid.Column="1" Grid.Row="1" Text="420" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <TextBlock Grid.Column="6" Grid.Row="2" Grid.ColumnSpan="2" Grid.RowSpan="2" Text="Score Dealer" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="25" />
        <TextBlock Grid.Column="3" Grid.Row="0" Grid.ColumnSpan="2" Text="Inzet" FontSize="20" VerticalAlignment="Top" HorizontalAlignment="Center"/>
        <TextBlock x:Name="LblInzet" Grid.Column="3" Grid.Row="0" Grid.ColumnSpan="2" Text="0" FontSize="20" VerticalAlignment="Bottom" HorizontalAlignment="Center"/>
    </Grid>

</Window>
